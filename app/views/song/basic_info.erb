<div class='main-info'>
  <div>
    <div class='align-middle display-inline-block'><%= icon :song %></div>
    <div class='music-title'><b><%= song.name %></b></div>
    <span class='align-middle text'> - <%= profile_link(song.creator) %> </span>
  </div>
  
  <%= vspace %><%= vspace %>
  <div>
    <span style='float: left; box-sizing: border-box'>
      <%= song_picture song %>
    </span>
	  <div class='pad-left-10' style='box-sizing: border-box'>
    	<%= main_info_row("Artists", list_artists(song.artists)) %>
    	<%= main_info_hor_line %>
    	<%= main_info_row("Creator", profile_link(song.creator)) %>
    	<%= main_info_hor_line %>
    	<%= main_info_row("Genres", list_genres(song.genres)) %>
    	<%= main_info_hor_line %>
    	<%= main_info_row("Views", song.views) %>
    	<%= main_info_hor_line %>
    	<%= main_info_row("Tags", list_tags(song.tags)) %>
    </div>
  </div>
</div>
<br>

<%= partial("song/actions", :locals => {:song => song}) %>
