<% waveformid = rand_id %>
<div class='jam'>
  <div class='play play-icon' <%= play_info jam %> waveformid='<%= waveformid %>'><img src='/new-ui/play.png'></div>
  <div class='info'>
    <div class='name'><%= jam.name %></div>
    <div class='artist'><%= jam.creator.username %></div>
    <div class='instrument'><%= jam.instrument.name if jam.instrument %></div>
  </div>
  <div class='spectrogram'>
    <div class='waveform' id="<%= waveformid %>">
      <div class="buffer"></div>
      <div class='seek'>
        <img src='<%= jam.file_data.waveform_url rescue "-" %>' class='waveform-image'>
      </div>
    </div>
  </div>
</div>