<font size='4'>Song / "<%= @song.name %>"</font> 
<br><br>

<%= add_field_name 'Actions' %> 
<a href='javascript: history.go(-1)' class='simple-link'>Back</a>,
<a class='simple-link' href='/song/<%= @song.id %>/manage'>Manage</a>, 
<a href='?' class='simple-link'>Refresh</a>
<br><br>


<div class='music-desc'>
  <%= add_field_name 'Description' %> <%= @song.description %><br>
  <%= add_field_name 'Artists' %> <%= partial(:'common/list_artists', {:locals => {:artists => @song.artists}}) %><br>
  <%= add_field_name 'Creator' %> <%= add_profile_link @song.creator %><br>
  <%= add_field_name 'Views' %> <%= @song.views %><br>
  <%= add_field_name 'Likes' %> <%= @song.liked_by.size %><br><br>
	<% if @session_user and not @session_user.likes_song?(@song) %>
  	<span class='simple-link' onClick='likeSong("<%= @song.id %>")'>Like</span>
	<% elsif @session_user %>
		<span class='simple-link' onClick='unlikeSong("<%= @song.id %>")'>Unlike</span>
	<% end %>
</div>
<br>
<%= section_header 'Jams' %>
<%= partial(:'song/jams', {:locals => {:jams => @song.jams}}) %>
<br>
<%= section_header 'Lyrics' %>
