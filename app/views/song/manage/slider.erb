<% 
  value ||= 25;
  div_width_value = value;
  id ||= rand_id
%>

<div style='background: url(/images/common/volumebar.png); width: 100px; height: 20px; overflow: hidden' id='<%= id %>-container'>
  <div style='padding-left: <%= div_width_value %>px; height: 20px; overflow: hidden' id='<%= id %>-head'>
    <img src='/images/common/volumeknob.png' height='20px'>
  </div>
  <span name='slider-value'><%= value %></span>
</div>

<%= js_start %>

  (function(){
    sliderRegister('<%= id %>')
  })();

<%= js_end %>