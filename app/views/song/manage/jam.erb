<% 
  jam = song_jam.jam 
  classes = "jam"
  classes += " selected" if song_jam.is_flattened 
%>

<div class='<%= classes %>' jamid='<%= jam.id %>' volume='<%= song_jam.volume %>'>
  <div class='info'>
    <div class='name'><%= jam.name %></div>
    <div class='artist'><%= jam.creator.username %></div>
    <% if song_jam.active %>
      <div class='active' style='visibility: hidden'>used in current published version</div>
    <% end %>
  </div>
  <div class='checkbox'><input type='checkbox' <%= "CHECKED" if song_jam.is_flattened %>></div>
  <% waveformid = rand_id %>
  <div class='play' <%= play_info jam %> waveformid='<%= waveformid %>' playtype='waveform'><%= icon "/images/42.png", 2, 42, true %></div>
  <div class='instrument'><img src='/new-ui/acoustic-guitar.png' height='36px'></div>
  <div class='volume'>
    <div class='icon'><img src='/new-ui/volume-icon.gif' height='20px'></div>
    <div class='slider'>
      <div class='jquery-slider' jamid='<%= jam.id %>'></div>
    </div>
  </div>
  <div class='actions'>                                          
    <%= vspace %>
    <div class="button" onclick='Jam.Manage.load("<%= jam.id %>")'>
      <div class="icon"><%= icon '/images/16.png', 14, 16, true %></div>
      <div class="text">Update</div>
    </div>
  </div>
  <div class='waveform' id="<%= waveformid %>">
    <div class="buffer"></div>
    <div class='seek'>
      <img src='<%= jam.file_data.waveform_url rescue "-" %>' class='waveform-image' width='100%' height='100%'  waveform2="<%= jam.file_data.waveform_url_2 %>" waveform="<%= jam.file_data.waveform_url %>">
    </div>
  </div>
</div>