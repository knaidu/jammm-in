<% song = @song %>

<%= render_state({:name => "Manage - " + @song.name, :description => "", :url => "/song/#{@song.id}/manage", :context_menu => "/song/#{@song.id}/context_menu"}) %>

<%= vspace 10 %>
<div class='song-page song'>
  <div class='image'>
    <img src='/new-ui/song2.jpg' width='78px' height='78px'>
  </div>
  <div class='content'>
    <div class='name'><%= @song.name %></div>
    <div class='artist'><%= @song.artists.map(&:username).join(", ") %></div>
    <div class='play-waveform'>
      <div class='play'><img src='/new-ui/play.png'></div>
      <div class='waveform'><img src='/new-ui/waveform.png'></div>
    </div>
  </div>
</div>

<%= vspace 30 %>
<div class='section-header'>Information</div>
<div class='field'>Name:</div><input type='text' name='name' value='<%= song.name %>'><%= vspace %>
<div class='field float-left'>Genre:</div>
<%= partial ("common/manage_genres", :locals => {
    :for_type => "song",
    :for_type_id => song.id
}) %>
<%= vspace 10 %>
<div class='field float-left'>Description:</div><textarea name='description'><%= song.description %></textarea>

<%= vspace 30 %>
<div class='section-header'>Jams</div>
<%= partial :"/song/manage/jams", :locals => {:jams => song.jams} %>