<div class='context-menu'>

  <div class='item container' onclick='Navigate.loadContent("/jam/<%= @jam.id %>/manage")'>
      <div class='icon'><img src='/new-ui/manage1.png' width='24px' class='context-menu-image'></div>
      <div class='text'>Manage</div>
  </div>

  <div class='item container' onclick='Song.create("jam", <%= @jam.id %>)'>
      <div class='icon'><img src='/new-ui/collaborate.png' width='24px' class='context-menu-image'></div>
      <div class='text'>Collaborate</div>
  </div>
  
  <div class='item container' onclick='General.download("<%= @jam.file_handle %>")'>
    <div class='icon'><img src='/new-ui/download.png' width='24px' class='context-menu-image'></div>
    <div class='text'>Download</div>
  </div>
  
  <% if not session_user?.likes_jam?(@jam) %>
    <div class='item container' onclick='Jam.Manage.like("<%= @jam.id %>")'>
      <div class='icon'><img src='/new-ui/like.png' width='24px' class='context-menu-image'></div>
      <div class='text'>Like</div>
    </div>
  <% else %>
    <div class='item container' onclick='Jam.Manage.unlike("<%= @jam.id %>")'>
      <div class='icon'><img src='/new-ui/like.png' width='24px' class='context-menu-image'></div>
      <div class='text'>Unlike</div>
    </div>  
  <% end %>

  <div class='item container' onclick='Navigate.loadContent("/jam/<%= @jam.id %>/manage")'>
    <div class='icon'><img src='/new-ui/comments.png' width='24px' class='context-menu-image'></div>
    <div class='text'>Comment</div>
  </div>
  
</div>