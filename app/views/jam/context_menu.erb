<div class='context-menu'>

  <% if session_user? == @jam.creator %>
    <div class='item container highlight' onclick='Navigate.loadContent("/jam/<%= @jam.id %>/manage")'>
      <div class='icon'><%= icon "/images/24.png", 14, 24, true %></div>
        <div class='text'>Edit Jam</div>
    </div>
  <% end %>
  
  <% if @jam.displayable? %>
    <div class='item container highlight' onclick='Song.create("jam", <%= @jam.id %>)'>
      <div class='icon'><%= icon "/images/24.png", 1, 24, true %></div>
        <div class='text bold'>Collaborate</div>
    </div>
  <% end %>
  
  <a href="/file/<%= @jam.file_handle %>" class='no-change'>
    <div class='item container highlight'>
        <div class='icon'><%= icon "/images/24.png", 4, 24, true %></div>
      <div class='text'>Download</div>
    </div>
  </a>
  
  <% if session_user? and @jam.displayable? %>
    <% if not session_user?.likes_jam?(@jam) %>
      <div class='item container highlight' onclick='Jam.Manage.like("<%= @jam.id %>")'>
      <div class='icon'><%= icon "/images/24.png", 5, 24, true %></div>
        <div class='text'>Like</div>
      </div>
    <% else %>
      <div class='item container highlight' onclick='Jam.Manage.unlike("<%= @jam.id %>")'>
      <div class='icon'><%= icon "/images/24.png", 22, 24, true %></div>
        <div class='text'>Unlike</div>
      </div>  
    <% end %>
  <% end %>
  
  <div class='item container highlight' onclick='Share.facebook("http://jammm.in/jam/<%= @jam.id %>/facebook_share?id=2", "jamMm.in - <%= @jam.name %>")'>
      <div class='icon'><img src="/images/misc/facebook.png" height='24px'></div>
    <div class='text'>Share</div>
  </div>

  
</div>
