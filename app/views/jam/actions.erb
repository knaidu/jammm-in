<div class='actions-panel'>
  <div class='item'>
    <div class='item-text'>
      <span class='clickable'><a href='javascript: playMusic("/file/<%= jam.file_handle %>", "<%= jam.name %>")'>Play</a></span>
    </div>
    <div class='item-icon'>
     <%= play jam %> 
    </div>     
  </div>
  
  <% if session_user? %>
    <div class='item'>
      <div class='item-text'>
        <% if session_user and not @session_user.likes_jam?(jam) %>
          <span class='clickable display-inline float-left' onClick='likeJam("<%= jam.id %>")' title='Like'>Like</span>
        <% elsif @session_user %>
          <span class='clickable display-inline' onClick='unlikeJam("<%= jam.id %>")' title='Unlike'>Unlike</span>
        <% end %>
      </div>
      <div class='item-icon'>
        <% if @session_user and not @session_user.likes_jam?(jam) %>
      	  <span class='simple-link display-inline float-left' onClick='likeJam("<%= jam.id %>")' title='Like'><%= icon :like %></span>
        <% elsif @session_user %>
      	  <span class='simple-link display-inline' onClick='unlikeJam("<%= jam.id %>")' title='Unlike'><%= icon :unlike %></span>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <div class='item'>
    <div class='item-text'>
	<a href='/file/<%= jam.file_handle %>'> Download</a>
    </div>
    <div class='item-icon'>
      <%= download jam %>
    </div>
  </div>
  
  <div class='item'>
    <div class='item-text'>
      <%= add_music_link_text jam, "Add" %>
     </div>
    <div class='item-icon'>
      <%= add_music_link jam %>
    </div>
  </div>
  
  <div class='item'>
    <div class='clickable item-text' title='Report Jam' onclick='reportMusic("jam", "<%= jam.id %>")'>
      Report
    </div>
    <div class='item-icon clickable' title='Report Jam' onclick='reportMusic("jam", "<%= jam.id %>")'>
      <%= icon :help1 %>
    </div>
  </div>
  
  <div class='item' style='float: right;'>
    <div class='item-text'>
<%=  "<span class='clickable display-inline-block pad1'><a href='/jam/#{jam.id}/manage' title='Edit Jam'> Edit Jam</a></song>"  %>
    </div>
    <div class='item-icon'>
      <%= manage_jam_link(jam) %>
    </div>
  </div>  

</div>

<%= vspace %>
<div class='float-right'>
  <div class='float-left size-11' style='margin-top: 5px; margin-right: 5px;'>
    Share: 
  </div>
  <div class='float-right'>
    <%= twitter_share jam %>
    <%= facebook_share jam %>
  </div>
</div>
