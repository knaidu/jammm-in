<%= render_state({
  :name => "#{@group.name}", 
  :description => "", 
  :url => "/groups/#{@group.handle}",
  :context_menu => "/groups/#{@group.handle}/context_menu"
}) %>

<%= vspace %>
<div class="page-header">Groups <span class="slash">/</span> <%= @group.name %></div>
<%= vspace 20 %>
<div class="group-profile">
  <div class="profile-picture"><img src='<%= @group.profile_picture_url %>'></div>
  <div class='content'>
    <div style='position: absolute; width: 300px'>
      <div class='field' style='font-size: 11px; width: 100px'>Name:</div> <%= @group.name %><%= vspace %>
      <div class='field' style='font-size: 11px; width: 100px'>Members:</div> <%= @group.users.count %><%= vspace %>
      <div class='field' style='font-size: 11px; width: 100px'>Follows:</div> <%= vspace %>
    </div>
    <div style='position: absolute; left: 350px'>
      <div class='small-field' style='width: 80px'>Jams:</div> <%= @group.jams.count %><%= vspace %>
      <div class='small-field' style='width: 80px'>Collaborations:</div> <%= @group.songs.count %> <%= vspace %>
      <div class='small-field' style='width: 80px'>Followers:</div> 
    </div>
  </div>
</div>

<%= vspace 10 %>

<% 
  id = rand_id 
  contentdivid = id + "-content"
%>
<div class='tabs' id='<%= id %>' contentdivid='<%= contentdivid %>'>
  <div class='padding-left'>&nbsp;</div>
  <div class='tab' url='/groups/<%= @group.handle %>/feeds'>
    <div class='content'><div class='image'><img src='/new-ui/Notifications-dock.png'></div><div class='text'>Update</div></div>
  </div>
  <div class='tab' url='/groups/<%= @group.handle %>/jams'>
    <div class='content'><div class='image'><img src='/new-ui/create-jam.png'></div><div class='text'>Jams</div></div>
  </div>
  <div class='tab' url='/groups/<%= @group.handle %>/songs'>
    <div class='content'><div class='image'><img src='/new-ui/collaborate.png'></div><div class='text'>Collaborations</div></div>
  </div>
  <div class='tab' url='/groups/<%= @group.handle %>/members'>
    <div class='content'><div class='image'><img src='/new-ui/collaborate.png'></div><div class='text'>Members</div></div>
  </div>
  <div class='padding-right'>&nbsp;</div>
</div>

<div id='<%= contentdivid %>' class='s11'></div>
<%= js_start %>
  General.Tabs.setup('<%= id %>');
<%= js_end %>