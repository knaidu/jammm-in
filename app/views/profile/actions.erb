<div class='pad-right-5 text'>
  <div id='main-info'>
  	<div class='actions'>
  		<% if session_user? %> 
  			<% if session_user?.follows?(user) %>
  			  <div>
    			  <span class='pad-right-5 float-left'><%= icon :unfollow %></span>
  	  			<a class='simple-link' href='javascript: unfollowUser("<%= user.username %>")'>Unfollow</a><br>
  	  		</div>
  			<% else %>
  				<div><span class='pad-right-5 float-left'><%= icon :following %></span><a class='simple-link' href='javascript: followUser("<%= user.username %>")'>Follow</a></div>
  			<% end %>
  		<% else %> 
  		<% end %>
  	</div>
  </div>
</div>