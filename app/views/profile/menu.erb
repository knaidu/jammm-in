	<%
	  items = [
	    {:text => 'Profile', :link => "/#{@user.username}", :icon => :profile, :id => 'menu-item-profile' },
	    {:text => 'Songs', :link => "/#{@user.username}/songs", :icon => :song, :id => 'menu-item-songs'},
