	  ]
  
	  %>
	  <div>
			<%= hor_line ("1px", "solid", "#cccccc") %>
			<%= partial("common/menu", :locals => {:items => items}) %>
	  </div>
	  <%
	%>

	<br><br>
	<%= section_header('Following', {:icon => :following}) %>
