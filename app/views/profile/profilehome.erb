<div class='profile-main'>
  <%= partial("profile/main_info", :locals => {:user => @user}) %>
  <% if @user.said %>
  	<%= vspace 20 %>
  	<%= partial("/profile/say", :locals => {:user => @user}) %>
	<% end %>
	<%= vspace 10 %>
  <%= partial("common/feeds", :locals => {:feeds => @user.updates, :show_as_updates => true}, :section_header => SectionHeader.new('Updates', :update)) %>
  <br>
</div>


<%= js_start %>
	GLOBAL.selectedMenuItem = 'menu-item-profile';
<%= js_end %>