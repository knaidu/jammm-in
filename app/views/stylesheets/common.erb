<%
	default_color = "#990000"
	default_line_color = "#cccccc"
%>

/* DEFAULTS */

.default-link-color {color: #990000;}
.default-bg-color {background-color: blue;}

/* HTML, BODY */

html, body {
  margin:0; 
  padding:0; 
  width:100%; 
  height:100%; 
  overflow: auto; 
}

A {
	color: inherit;
	text-decoration: inherit;
}

.container {
  text-align: left;
  width: 80%;
  overflow: auto;
}

table {
	font-size: inherit;
	color: inherit;
	overflow: auto;
}
TD {vertical-align: top}

table, td, body, input, textarea {font-family: 'lucida grande',tahoma,verdana,arial,sans-serif; font-size: 11px;}

span {display: block; overflow: auto; word-wrap: break-word}
div {display: block; overflow: auto; word-wrap: break-word}
IMG {border: 0}
a:hover {text-decoration: underline}
input[type='text'], input[type='password'], TEXTAREA {border: thin groove <%= default_line_color %>; width: 200}
input[type='text'], input[type='password'] {height: 22px}
/* HR */

hr {border: 0}
hr.thin {background-color: <%= default_line_color %>; height: 1px;}
hr.w60-align-left {width: 60%; margin-left: 0; text-align: left}


/* GENERAL PURPOSE */
.simple-link{color: <%= default_color%>; cursor: pointer}
.default-color{color: <%= default_color %>;}
.w100 {width: 100%;}
.w60 {width: 60%}
.width-auto {width: auto;}
.border1 {border: thin groove grey}
.bg-grey {background-color: #cccccc}
.pad10 {padding: 10px 10px 10px 10px;}
.pad1 {padding: 1px;}
.pad-5 {padding: 5px;}
.pad-right-10{padding-right: 10px;}
.pad-right-5 {padding-right: 5px;}
.pad-left-5{padding-left: 5px;}
.pad-left-10{padding-left: 10px;}
.bold {font-weight: bold}
.grey {color: grey}
.black {color: black}
.left-float {float: left;}
.float-left {float: left;}
.float-right {float: right;}
.underline {text-decoration: underline;}
.italic {font-style: italic;}
.display-inline {display: inline}
.text-center {text-align: center}
.text-right {text-align: right}
.text-left {text-align: left}	
.field{color: grey; font-weight: bold; width: 100px; display: inline-block}
.round {-moz-border-radius: 5px; -webkit-border-radius: 5px}
.height-inherit {height: inherit;}
/* PROGRESS-BAR */
.progress-bar-container{
	border: thin groove <%= default_color %>;
}
.progress-bar-container .progress-bar {
	background-color: <%= default_color %>;
	width: 0px;
}


/* MESSAGES */
.success-message {background-color: green; text-align: center; padding: 5px; color: white}
.failure-message {background-color: red; text-align: center; padding: 5px; color: white}

/* TOP BAR */

.top-bar {background-color: #990000; height: 40px; color: white; text-align: center;}
.top-bar-search {float: right; padding: 8px 10px;}
.top-bar-search-container{overflow: auto; background-color: <%= default_color %>; -moz-border-radius:0 0 5px 5px;}

/* FOOTER */

.footer {color: #990000}

/* COMMON STRUCTURE */
.common-content-container {overflow: auto;}
.common-content-container .left-panel {width: 20%; float: left; overflow: auto;}
.common-content-container .middle-panel {width: 50%; float: left;}
.common-content-container .right-panel {width: 30%; float: right; overflow: auto}

.profile-photo {width: 100%; height: 100px}

/* MAIN COLUMNS */

.account-content-container {overflow: auto;}
.account-content-container .left-panel {width: 20%; float: left; overflow: auto;}
.account-content-container .middle-panel {width: 50%; float: left;}
.account-content-container .right-panel {width: 30%; float: right;}

/* PROFILE */

.profile-content-container {overflow: auto;}
.profile-content-container .left-panel {width: 20%; float: left; overflow: auto;}
.profile-content-container .middle-panel {width: 50%; float: left;}
.profile-content-container .right-panel {width: 30%; float: right;}

/* MENU */
.menu {
	background-color: white; 
	padding: 0px 10px 0px 5px;
	border-color: #cccccc;
	border-width: 5px 1px 0px 0;
	border-style: solid;
	-moz-border-radius: 5px 5px 0 0; 
	-webkit-border-radius: 5px 0 0;
	border-radius: 5px 5px 0 0;
}

/* MUSIC, i.e: songs, jams, lyrics */
.music-desc {padding: 10px; background-color: #faebd7; border: thin solid #eedfcc;}
.upload-jam-iframe {border: none; height: 80; width: 100%; overflow: hidden;}
