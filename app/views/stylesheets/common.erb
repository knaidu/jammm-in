<%
	default_color = "#990000"
	default_dark_color = "#800000"
	default_round = "-moz-border-radius: 5px; -webkit-border-radius: 5px; border-radius: 5px;"
	light_gray  = "#eee9e9"
	
	font_family = "Arial,Helvetica,sans-serif"
%>

/* DEFAULTS */

.default-link-color {color: #990000;}


/* HTML, BODY */
html, body {
  margin:0; 
  padding:0; 
  width:100%; 
  height:100%; 
  overflow: auto;
  font-family: <%= font_family %>; 
  font-size: 12px;
}

.top-bar {
  height: 60px;
  background-color: <%= default_color %>;
  color: white;
  position: absolute;
  width: 100%;
}

.middle-bar {
  margin-top: 60px;
  position: relative;
}

.middle-bar .menu-panel {position: absolute; width: 200px; border-right: 1px solid grey; z-index: 2; background-color: white}
.middle-bar .content-panel {position: relative; margin-left: 200px; z-index: 1}

.menu-panel .navigation-bar {width: 100%; height: 50px; border-bottom: 1px solid grey;}
.menu-panel .navigation-bar .icon {position: absolute; width: 32px; margin-top: 10px}
.menu-panel .navigation-bar .content {position: relative; margin-left: 32px; margin-top: 5px}
.menu-panel .navigation-bar .content .name {font-weight: bold;}

.dialog {z-index: 10; display: none; min-width: 400px; height: 200px; position: fixed; background-color: yellow; border: 1px solid grey; left: 100px; top: 10px}