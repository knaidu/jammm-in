<% 
  form_id = rand_id 
  container_id = rand_id
%>

<div id='<%= container_id %>'>
  <%= vspace 10 %>
  <div class='position-relative' style='min-height: 20px'>
    <form id='<%= form_id %>' action='/account/say' onsubmit='submitSay("<%= form_id %>", "<%= container_id %>"); return false'>
      <div class='position-absolute'><%= icon :say %></div>
      <div class='position-absolute' style='right: 0px'>
        <input type='submit' value='Post' style='margin: 0px;'>
      </div>
      <div class='position-relative text-center' style='margin-left: 30px; margin-right: 50px; '>
        <input type='text' style='border-color: #eeeeee; width: 99%' name='message'>
        <%= vspace %>
        <div class='text grey text-left'>
          <% if (say = session_user?.said) %>
            <%= say.message %>
          <% else %>
            e.g. Working on a song, anyone interested in singing ?
          <% end %>
        </div>
        <%= vspace %>
        <div class='grey text text-left position-relative'>
          <div class='default-color position-absolute'>Note:</div>
          <div style='position: relative; margin-left: 30px'>You can now tag/mention artists by prefixing the username with a '@'. <br>
          e.g. @Musiclab great work on the drums.
          </div>
        </div>
      </div>
    </form>
  </div>
</div>