<div class='account'>
  <%= partial("account/main_info", :locals => {:user => session_user?}) %>
  <%= vspace 20 %>
  <%= partial("/account/say", :section_header => SectionHeader.new("Say")) %>
  <%= vspace 20 %>  
  <%= partial("account/feeds", :locals => {:feeds => @session_user.feeds, :show_as_updates => false}, :section_header => SectionHeader.new('Feeds')) %>
</div>

<%= js_start %>
	setSelectedMenuItem('menu-item-home');
	
	(function(){
	  var items = $('tutorial').getElementsByClassName("section");
	  items = $A(items).shuffle();
	  items.pop();
	  items.each(function(item){$(item).remove()});
	})();
<%= js_end %>
