<% notifications = session_user?.notifications %>
<div class='main-info'>
  <%= main_info_row('Total Notifications', notifications.size) %>
</div>

<%= vspace %><%= vspace %>
<%= section_header 'Notifications' %>
<% notifications.each do |notification| %>
  <%= partial("/account/notifications/notification", :locals => {:notification => notification}) %>
  <%= vspace 5 %>
<% end %>
