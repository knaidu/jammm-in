<table class='w100'>
  <tr>
    <td class='w1'><%= song_picture song %></td>
    <td class='w100'>
      <div style='width: 20px; float: left'>
        <%= icon :play2 %>
        <br>
        <%= add_music_link song %>
      </div>
      <div style='float: left; width: 80%'>
        <span class='bold simple-link'><%= song_link song %></span>
        <%= vspace %>
        <%= list_artists song.artists %>
        <% if not song.genres.empty? %>
          <div class='grey'><%= list_genres song.genres %></div>
        <% end %>
      </div>
    </td>
  </tr>
</table>
<br class='clear'>